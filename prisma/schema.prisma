generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AdminUser {
  id          String   @id @default(uuid())
  email       String   @unique
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DesignBlock {
  id            String         @id @default(uuid())
  blockKey      String         @unique
  label         String
  content       Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  publishStatus PublishStatus?
}

model PublishStatus {
  id          String      @id @default(uuid())
  blockId     String      @unique
  isPublished Boolean     @default(true)
  version     Int         @default(1)
  publishedBy String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  block       DesignBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
}
